<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- The hibernate mapping tag is the root tag of any Hibernate mapping (HBM) 
	file. A hibernate mapping file allows us to map our Java classes to some 
	entity in our DB using an XML configuration. -->
<hibernate-mapping>
	<class name="com.revature.model.Movie" table="movie">
		<!-- Note that the name of your id/property must match the name of some 
			field on your movie class. -->
		<id name="id">
			<column name="movie_id" sql-type="serial"></column>
			<generator class="identity"></generator>
		</id>
		<property name="name">
			<column name="title"></column>
		</property>
		<property name="rating">
			<column name="rating">
			</column>
		</property>
		<property name="url">
			<column name="url"></column>
		</property>
		<many-to-one name="genreId" 
			class="com.revature.model.Genre" fetch="join" lazy="false">
			<column name="genre_id"></column>
		</many-to-one>
	</class>
	<!-- We can also use named queries in Hibernate. These are queries that we give
	some name to and call by name. -->
	<query name="allMovies">from Movie</query>
</hibernate-mapping>